---
layout: layout.njk
permalink: "tags/{{ tag | slug }}/index.html"
eleventyComputed:
  title: "Posts tagged '{{ tag }}'"
---

<section class="prose prose-orange dark:prose-dark">
  <h1>Posts tagged '{{ tag }}'</h1>

  {% for group, posts in collections.post | filterbytag(tag) | reverse | groupbyyearmonth %}
  <h3>{{ group }}</h3>
  <ul>
    {% for post in posts %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </li>
    {% endfor %}
  </ul>
  {% endfor %}
</section>
