---
layout: layout.njk
permalink: "tags/{{ tag | slug }}/index.html"
eleventyComputed:
  title: "Posts tagged '{{ tag }}'"
---

{%- from "pizzazz.njk" import pizzazz -%}

<div class="relative">
  {{ pizzazz('bottom-[-15px]') }}

  <div class="prose prose-indigo mx-auto max-w-prose px-safe-offset-4 dark:prose-invert md:px-0">
    <h1>Posts tagged '{{ tag }}'</h1>
  </div>
</div>

<section class="prose prose-indigo mx-auto mt-12 max-w-prose px-safe-offset-4 dark:prose-invert md:px-0">
  {% for group, posts in collections.post | filterbytag(tag) | reverse | groupbyyearmonth %}
  <h3>{{ group }}</h3>
  <ul>
    {% for post in posts %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </li>
    {% endfor %}
  </ul>
  {% endfor %}
</section>
