---
layout: layout.njk
title: "All posts"
---

<section class="prose prose-indigo dark:prose-invert">
  <h1 class="header-background">{{ title }}</h1>
</section>

<section class="prose prose-indigo mt-12 dark:prose-invert">
  {% for group, posts in collections.posts | reverse | groupByYearMonth %}
  <h3>{{ group }}</h3>
  <ul>
    {% for post in posts %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </li>
    {% endfor %}
  </ul>
  {% endfor %}
</section>
